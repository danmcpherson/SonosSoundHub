{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "python-run",
      "command": "${workspaceFolder}/api-python/.venv/bin/python",
      "args": [
        "-m",
        "uvicorn",
        "sndctl.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "type": "process",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/api-python",
        "env": {
          "SNDCTL_DATA_DIRECTORY": "../data",
          "SNDCTL_WWWROOT_PATH": "../wwwroot",
          "SNDCTL_SOCO_CLI_USE_LOCAL_CACHE": "true"
        }
      }
    },
    {
      "label": "python-install",
      "command": "python3",
      "args": [
        "-m",
        "venv",
        ".venv"
      ],
      "type": "process",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/api-python"
      }
    },
    {
      "label": "python-deps",
      "command": "${workspaceFolder}/api-python/.venv/bin/pip",
      "args": [
        "install",
        "-e",
        "."
      ],
      "type": "process",
      "dependsOn": "python-install",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/api-python"
      }
    },
    {
      "label": "mcp-server",
      "command": "${workspaceFolder}/sonos-mcp-server/.venv/bin/python",
      "args": [
        "-m",
        "sonos_mcp_server"
      ],
      "type": "process",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/sonos-mcp-server"
      }
    },
    {
      "label": "mcp-server-install",
      "command": "python3",
      "args": [
        "-m",
        "venv",
        ".venv"
      ],
      "type": "process",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/sonos-mcp-server"
      }
    },
    {
      "label": "mcp-server-deps",
      "command": "${workspaceFolder}/sonos-mcp-server/.venv/bin/pip",
      "args": [
        "install",
        "-e",
        "."
      ],
      "type": "process",
      "dependsOn": "mcp-server-install",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/sonos-mcp-server"
      }
    }
  ]
}